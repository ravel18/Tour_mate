<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/button_Add_Event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:drawableTop="@drawable/create_event"
                android:padding="5dp"
                android:text="Add Event"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_View_Event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:drawableTop="@drawable/event_list"
                android:padding="5dp"
                android:text="View All Events"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_Nearby_places"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:drawableTop="@drawable/nearby"
                android:padding="5dp"
                android:text="Nearby Places"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/button_Weather"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:drawableTop="@drawable/weather_icon"
                android:text="Weather"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_Moments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:drawableTop="@drawable/moments"
                android:text="Moments"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>